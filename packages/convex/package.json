{
  "name": "@buildea/convex",
  "version": "0.0.0",
  "description": "Convex backend",
  "exports": {
    "./_generated/*": {
      "types": "./convex/_generated/*.d.ts",
      "default": "./convex/_generated/*.js"
    },
    "./auth": {
      "types": "./convex/auth.ts",
      "default": "./convex/auth.ts"
    },
    "./errors": {
      "types": "./convex/errors.ts",
      "default": "./convex/errors.ts"
    }
  },
  "scripts": {
    "dev": "convex dev",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "setup": "convex dev --until-success",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@buildea/auth": "workspace:*",
    "@convex-dev/better-auth": "^0.10.10",
    "@neynar/nodejs-sdk": "^3.121.0",
    "better-auth": "catalog:",
    "convex": "^1.31.5",
    "convex-helpers": "^0.1.111"
  },
  "devDependencies": {
    "@better-auth/cli": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@buildea/prettier-config"
}
